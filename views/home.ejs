<link rel="stylesheet" href="/css/home.css">

<div class="main">
    <!-- <div > -->
        <form action="/create-task" method="POST" class="task_creation i-flex"> 
            <textarea class="description" name="task_Description" cols="100%" rows="5" placeholder="Enter your Task here" required></textarea>
            
            <!-- <input class="description"  type="text" name = "task_Description" placeholder="Enter your Task here" required> -->
            <select name="category" required>
                <option value="" disabled selected>Select your option</option>
                <option>Important</option>
                <option>Assigned to me</option>
                <option>Planned</option>
                <option>Flagged email</option>
                <option>Tasks</option>
                <option>Others</option>
            </select>
            <input type="date" name="due_date"  required>
            <button type="submit"> Add </button>
        </form>    
    <!-- </div> -->
    
    <ul>
        <% for(let task of task_list) { %>
            <li> <p>
                    <span> <%= task.details %> &nbsp; &nbsp;</span>
                    <span> <%= task.due_date.toDateString() %> &nbsp; &nbsp;</span>
                    <span> <%= task.task_type %> &nbsp; &nbsp;</span>
                    <a href="/delete-task?id=<%=task._id%>"> <b>DEL</b></a>
            </p> </li>
        <% } %>
    </ul>
</div>


